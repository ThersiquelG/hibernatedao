<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.greg.model.User" table="users">
        <id name="userid" type="int" column="userid">
            <generator class="increment" />
        </id>
        <property name="nom">
            <column name="nom" />
        </property>
        <property name="prenom">
            <column name="prenom" />
        </property>
        <property name="email">
            <column name="email" />
        </property>
        <property name="mdp">
            <column name="mdp" />
        </property>
    </class>
</hibernate-mapping>